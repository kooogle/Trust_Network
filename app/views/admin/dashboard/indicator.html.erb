<%= content_for(:title,  'Indicator | Market') %>
<%= content_for :script do %>
  <%= javascript_include_tag 'echarts.min', 'data-turbolinks-track' => true %>
<% end %>
<section class="content-header">
  <h1>
    <%= @block.market_name %>行情  <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-line-chart"></i>  最新行情 </li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <div class="row">
        <div class="col-sm-2">
          <select onchange="javascript:location.href = this.value;" class="form-control" style="display: inline;">
            <option value="?">请选择块链</option>
            <% Chain.all.each do |item|%>
              <option value="?block=<%= item.id %>&start=<%= params[:start] || Date.current.to_s %>&end=<%= params[:end] || Date.current.to_s %>" <%= 'selected' if params[:block].to_i == item.id || (!params[:block].present? && item.id == Chain.first.id)%>><%= item.market_name %></option>
            <% end %>
          </select>
        </div>
        <div class="col-sm-8">
          <form action="" method="get">
            <div class="col-sm-3">
              <div class="form-group has-feedback">
                <div class="input-group">
                  <% pre_7_day = (Date.current - 7.day).to_s %>
                  <input id='start' type="text" name="start" value="<%= params[:start] || pre_7_day %>" class="form-control" placeholder="起始日期">
                  <input type="hidden" name="block" value="<%= params[:block] || Chain.first.id %>">
                </div>
              </div>
            </div>
            <div class="col-sm-3">
              <div class="form-group has-feedback">
                <div class="input-group">
                  <input id='end' type="text" name="end" value="<%= params[:end] || Date.current.to_s %>" class="form-control" placeholder="截止日期">
                  <span class="input-group-btn">
                    <button class="btn btn-default btn-flat" type="submit"><i class="fa fa-search-plus"></i></button>
                  </span>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <div id="myChart" style="width: 100%;height:560px;"></div>
        </div>
      </div>
    </div>
  </div>
</section>
<script type="text/javascript">
  var myChart = echarts.init(document.getElementById('myChart'));
  var upColor = '#ec0000';
  var upBorderColor = '#8A0000';
  var downColor = '#00da3c';
  var downBorderColor = '#008F28';

  // 数据意义：开盘(open)，收盘(close)，最低(lowest)，最高(highest)
  var data0 = splitData([['2013/1/24', 2320.26,2320.26,2287.3,2362.94]]);

  function splitData(rawData) {
    var categoryData = [];
    var values = []
    for (var i = 0; i < rawData.length; i++) {
      categoryData.push(rawData[i].splice(0, 1)[0]);
      values.push(rawData[i])
    }
    return {
      categoryData: categoryData,
      values: values
    };
  }

  function calculateMA(dayCount) {
    var result = [];
    for (var i = 0, len = data0.values.length; i < len; i++) {
      if (i < dayCount) {
        result.push('-');
        continue;
      }
      var sum = 0;
      for (var j = 0; j < dayCount; j++) {
        sum += data0.values[i - j][1];
      }
      result.push(sum / dayCount);
    }
    return result;
  }

  option = {
    title: {
      text: '趋势指标',
      left: 0
    },
    tooltip: {
      trigger: 'axis',
      axisPointer: {
        type: 'cross'
      }
    },
    legend: {
      data: ['<%= @block.block %>','STOCK','MA5', 'MA15']
    },
    grid: {
      left: '5%',
      right: '5 %',
      bottom: '15%'
    },
    xAxis: {
      type: 'category',
      data: <%= raw @date_array %>,
      scale: true,
      boundaryGap : false,
      axisLine: {onZero: false},
      splitLine: {show: false},
      splitNumber: 20,
      min: 'dataMin',
      max: 'dataMax'
    },
    yAxis: {
      scale: true,
      splitArea: {
        show: true
      }
    },
    dataZoom: [
    {
      type: 'inside',
      start: 0,
      end: 100
    },
    {
      show: true,
      type: 'slider',
      y: '90%',
      start: 0,
      end: 100
    }
    ],
    series: [
    {
      name: '<%= @block.block %>',
      type: 'candlestick',
      data: <%= raw @stock_array %>,
      itemStyle: {
        normal: {
          color: upColor,
          color0: downColor,
          borderColor: upBorderColor,
          borderColor0: downBorderColor
        }
      },
      markPoint: {
        label: {
          normal: {
            formatter: function (param) {
              return param != null ? Math.round(param.value) : '';
            }
          }
        },
        data: [
        {
          name: 'XX标点',
          coord: ['2013/5/31', 2300],
          value: 2300,
          itemStyle: {
            normal: {color: 'rgb(41,60,85)'}
          }
        },
        {
          name: 'average value on close',
          type: 'average',
          valueDim: 'close'
        }
        ],
        tooltip: {
          formatter: function (param) {
            return param.name + '<br>' + (param.data.coord || '');
          }
        }
      },
      markLine: {
        symbol: ['none', 'none'],
        data: [
        [
        {
          name: 'from lowest to highest',
          type: 'min',
          valueDim: 'lowest',
          symbol: 'circle',
          symbolSize: 10,
          label: {
            normal: {show: false},
            emphasis: {show: false}
          }
        },
        {
          type: 'max',
          valueDim: 'highest',
          symbol: 'circle',
          symbolSize: 10,
          label: {
            normal: {show: false},
            emphasis: {show: false}
          }
        }
        ],
        {
          name: 'min line on close',
          type: 'min',
          valueDim: 'close'
        },
        {
          name: 'max line on close',
          type: 'max',
          valueDim: 'close'
        }
        ]
      }
    },
    {
      name: 'STOCK',
      type: 'line',
      data: <%= raw @stock_price %>,
      smooth: true,
      lineStyle: {
        normal: {opacity: 0.5}
      }
    },
    {
      name: 'MA5',
      type: 'line',
      data: <%= raw @stock_ma5 %>,
      smooth: true,
      lineStyle: {
        normal: {opacity: 0.5}
      }
    },
    {
      name: 'MA15',
      type: 'line',
      data: <%= raw @stock_ma15 %>,
      smooth: true,
      lineStyle: {
        normal: {opacity: 0.5}
      }
    }
    ]
  };
  myChart.setOption(option);
</script>